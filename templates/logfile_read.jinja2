{% extends 'layout.jinja2' %}

{% block content %}
<div class="content">
    <h1><span class="font-semi-bold">Logfile</span></h1>
    <p class="lead">Logfile reading here!</p>
    System:<br>
    {% for log_entry in logfile_contents %}
        {% if log_entry.entrytype == 'system' %}
            {{ log_entry.date }}
            {{ log_entry.message }}
            <br>
        {% endif %}
    {% endfor %}
    Users:<br>
    {% for log_entry in logfile_contents %}
        {% if log_entry.entrytype == 'user' %}
            {{ log_entry.date }}
            {{ log_entry.username }}
            {{ log_entry.action }}
            <br>
        {% endif %}
    {% endfor %}
</div>

{% endblock content %}