{% extends 'layout.jinja2' %}

{% block content %}
<div class="content">
    <h1><span class="font-semi-bold">System Logs</span></h1>
    <h2>System:</h2>
    <textarea rows="10" cols="80">{% for log_entry in logfile_contents %}{% if log_entry.entrytype == 'system' %}{{ log_entry.date }} {{ log_entry.message }}&#013;&#010;{% endif %}{% endfor %} </textarea>
    <h2>Users:</h2>
    <textarea rows="10" cols="80">{% for log_entry in logfile_contents %}{% if log_entry.entrytype == 'user' %}{{ log_entry.date }} {{ log_entry.username }} {{ log_entry.action }}&#013;&#010;{% endif %}{% endfor %} </textarea>
</div>

{% endblock content %}