{% extends "layout.jinja2" %}

{% block content%}
<div class="content">
    <h1><span class="font-semi-bold">Delete Pupil</span> <span class="smaller">Pupil Information Database</span></h1>
    <p>Press the confirm button below to delete pupil ID:{{ pupil_id }}</p>
    <p>Press the cancel button or navigate away from this page to cancel the request.</p>
    <a href="/admin/delete_pupil?id={{ pupil_id }}&mode=confirm" type="submit" name="delete_pupil" value="delete_pupil" class="btn btn-danger">Delete</a>
    <a href="/" class="btn btn-primary">Cancel</a>
    {% if not request.authenticated_userid %}
    <p>You will need to <a href="/signin">sign in</a> to view or edit any records.</p>
    {% endif %}
</div>


{% endblock content %}