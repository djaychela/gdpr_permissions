{% extends 'layout.jinja2' %}

{% block content %}
    <h1>Class Information</h1>
        <span>
            <table class="table table-sm">
                <thead class="thead-light">
                    {% for attribute in attributes %}
                        <th>{{ attribute }}</th>
                    {% endfor %}
                <th></th>
                </thead>
                <tbody>
                <tr>
                    {% for class_info in all_class_info %}
                        {% for attribute in attributes %}
                           <td> {{ class_info[attribute] }} </td>
                        {% endfor %}
                        <td>
                            <a class="btn btn-primary" href="/admin/class_edit?class_id={{ class_info['id'] }}">Edit</a>
                            <a class="btn btn-danger" href="/admin/class_delete?class_id={{ class_info['id'] }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            <tr><td colspan="5"><a class="btn btn-primary" href="/admin/class_create">Create New Class</a></td> </tr>
                </tbody>
            </table>
        </span>
{% endblock content %}